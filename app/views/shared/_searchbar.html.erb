<%= form_tag(mowers_path, method: :get) do %>
  <div class="search-form-control form-group">
    <div class="search-input-container">
      <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: "Ex: Lausanne", id: "search-input") %>
      <%= button_tag(type: "submit", class: "button") do %>
        <i class="fas fa-search"></i> Start Mowing
      <% end %>
    </div>
    <div class="max-dist-container">
      <p id="max-dist-label">Max distance</p>
      <input type="range" class="form-control-range" id="distance-range" name="distance" min="1" max="500" oninput="this.nextElementSibling.value = this.value + ' km'">
      <output>250 km</output>
    </div>
  </div>
<% end %>
