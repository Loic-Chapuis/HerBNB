<%= form_tag(mowers_path, method: :get) do %>
  <div class="search-form-control form-group">
    <div class="search-input-container">
      <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: "Ex: Lausanne", id: "search-input") %>
      <%= button_tag(type: "submit", class: "button") do %>
        <i class="fas fa-search"></i> Start Mowing
      <% end %>
    </div>

    <div class="max-dist-container">
      <p>Max distance (km)</p>
      <%= number_field_tag(:distance, params[:distance], value: 200, class: "form-control-number", placeholder: "Ex: Lausanne") %>
    </div>

  </div>
<% end %>
