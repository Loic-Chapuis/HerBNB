<%= form_tag mowers_path, method: :get do %>
  <div class="search-form-control form-group">
    <%= text_field_tag(:query, params[:query], class: "form-control", placeholder: "Ex: Lausanne") %>
    <%= button_tag(type: "submit", class: "button") do %>
      <i class="fas fa-search"></i> Start Mowing
    <% end %>
  </div>
<% end %>
