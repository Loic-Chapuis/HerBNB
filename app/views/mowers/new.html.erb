<div class="container">
  <h1 class="row justify-content-center">Creating your new mower</h1>
    <div class="row justify-content-center border">
      <div class="form-group m-3">
        <%= simple_form_for @mower do |f| %>
        <%= f.input :title, placeholder: 'John Deer Q112' %>
        <%= f.input :description, placeholder: 'Amazing mower made with gold' %>
        <%= f.input :price_per_day, placeholder: '150$' %>
        <% end %>
      </div>
      <div class="form-group m-3">
        <%= form_with model: @mower do |form| %>
        <%= "Add picture of the mower" %>
        <%= form.file_field :picture, placeholder: 'Add picture' %>
        <% end %>
        <div class="button">
          <%= link_to "Submit" %>
        </div>
      </div>
    </div>
</div>
