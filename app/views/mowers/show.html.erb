<div class="container mt-2">
  <div class="row mb-2">
    <div class= "col-6">
      <h1><%= @mower.title %></h1>
      <h5 class="price">Price per day:</h5>
      <%= @mower.price_per_day %>

      <h5> Description of the mower:</h5>
      <p> <%= @mower.description %> </p>
    </div>
    <div class="col-6">
      <%= cl_image_tag @mower.photo.key %>
    </div>
  </div>

  <div class="bg-white rounded p-3 shadow">
    <h3>Book a mower !</h3>
    <h2><%= @mower.title %></h2>
    <%= simple_form_for [@mower, @booking] do |f| %>
      <%= f.input :pickup_date %>
      <%= f.input :return_date %>
      <%= f.submit class: 'btn btn-success' %>
    <% end %>
  </div>
    <div id="map" data-mapbox-key="<%= ENV["MAPBOX_API_KEY"] %>" style="height: 150px; width: auto; margin-top: 20px;"></div>
  </div>
</div>
