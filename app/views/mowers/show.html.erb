<div class="ml-5 mt-2 mb-2">
  <h1><%= @mower.title %></h1>
</div>
<div class="d-flex justify-content-between">
  <div class="ml-5 mr-2">
    <h5 class="price">Price per day: <%= @mower.price_per_day %></h5>
    <p> <%= @mower.description %> </p>
  </div>
  <div class="ml-2 mr-2">
    <%= cl_image_tag @mower.photo.key, height: 400, width: 500, crop: :fill %>
  </div>
  <div class="ml-2 mr-2">
    <div class="bg-white rounded p-3 shadow">
      <h3>Book a mower !</h3>
      <h2><%= @mower.title %></h2>
      <%= simple_form_for [@mower, @booking] do |f| %>
        <%= f.input :pickup_date %>
        <%= f.input :return_date %>
        <%= f.submit class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
