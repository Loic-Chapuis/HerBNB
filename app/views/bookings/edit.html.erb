<div class="d-flex align-items-center justify-content-center mt-3">
  <div class="bg-white rounded p-3 shadow">
    <h3>Edit your booking !</h3>
    <h2><%= @booking.mower.title %></h2>
    <%= simple_form_for [@mower, @booking] do |f| %>
      <%= f.input :pickup_date, as: :date, html5: true %>
      <%= f.input :return_date, as: :date, html5: true %>
      <%= f.submit "Edit my booking", class: 'button' %> <%= link_to "Cancel", user_path(@user.id) %>
    <% end %>
  </div>
</div>
